{
  "compilerOptions": {
    "target": "es2020",         // Or another modern target
    "module": "commonjs",       // Or "esnext" if you prefer modules
    "outDir": "./dist",          // Output directory for compiled JavaScript
    "strict": true,             // Enable strict type checking
    "esModuleInterop": true,    // Improve compatibility with CommonJS modules
    "skipLibCheck": true,         // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing
    "sourceMap": true           // Generate source maps for debugging
  },
  "include": [
    "src/**/*.ts"            // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules"           // Exclude node_modules
  ]
}